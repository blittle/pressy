{
  "name": "pressy",
  "version": "0.1.1",
  "description": "A self-publishing web framework for books and articles",
  "type": "module",
  "bin": {
    "pressy": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite/plugin.d.ts",
      "import": "./dist/vite/plugin.js"
    },
    "./client": {
      "types": "./dist/runtime/client.d.ts",
      "import": "./dist/runtime/client.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "@preact/signals": "^1.2.0",
    "@pressy-pub/components": "workspace:*",
    "cac": "^6.7.14",
    "chokidar": "^3.5.3",
    "esbuild": "^0.27.3",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "preact": "^10.19.0",
    "preact-render-to-string": "^6.3.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.4",
    "workbox-build": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@pressy-pub/components": "workspace:*",
    "@pressy-pub/typography": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@pressy-pub/components": {
      "optional": true
    },
    "@pressy-pub/typography": {
      "optional": true
    }
  }
}
